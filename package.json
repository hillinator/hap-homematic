{
	"name": "hap-homematic",
	"version": "2.0.01",
	"description": "provides a homekit bridge to the ccu",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git://github.com/thkl/hap-homematic.git"
	},
	"keywords": [
		"HomeKit",
		"HomeMatic",
		"CCU"
	],
	"engines": {
		"node": ">=8.11.0"
	},
	"dependencies": {
		"binrpc": "3.3.1",
		"chalk": "^4.0.0",
		"commander": "^5.1.0",
		"cors": "^2.8.5",
		"express": "^4.17.1",
		"fakegato-history": "^0.6.2",
		"hap-nodejs": "^0.5.7",
		"homematic-xmlrpc": "1.0.2",
		"moment": "2.29.4",
		"sockjs": "^0.3.20",
		"express-fileupload": "1.4.0"
	},
	"husky": {
		"hooks": {
			"pre-commit": "npm test",
			"pre-push": "npm test"
		}
	},
	"scripts": {
		"start": "node index.js || true",
		"dev": "nodemon ./index.js -- -D -H ccutest.thkl.arpa -C ./conf.d",
		"devall": "DEBUG=* node index.js -D || true",
		"test": "mocha",
		"update": "mkdir /tmp/hap-homematic-cache;cd /usr/local/addons/hap-homematic;npm i --cache /tmp/hap-homematic-cache hap-homematic@latest;rm -R /tmp/hap-homematic-cache",
		"restart": "/etc/config/rc.d/hap-homematic restart",
		"lint": "standard",
		"preversion": "npm run test",
		"prebuild": "npm --no-git-tag-version version patch",
		"version": "",
		"postversion": "git push && git push --tags"
	},
	"devDependencies": {
		"expect.js": "0.3.1",
		"husky": "^4.2.5",
		"mocha": "^7.0.1"
	},
	"mocha": {
		"bail": true,
		"reporter": "spec",
		"recursive": true
	},
	"standard": {
		"ignore": [
			"/lib/configurationsrv/html/*"
		],
		"env": [
			"commonjs",
			"node",
			"mocha"
		]
	},
	"files": [
		"lib/",
		"etc/",
		"README.md",
		"CHANGELOG.md",
		"LICENSE",
		"index.js",
		"package.json",
		".nobackup"
	],
	"nodemonConfig": {
		"ignore": [
			"conf.d/*",
			"client/*"
		]
	}
}